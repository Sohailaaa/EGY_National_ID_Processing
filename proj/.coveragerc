[run]
# Files or directories to omit from coverage
omit =
    */migrations/*
    */admin.py
    */National_ID_Processing/models.py
    */National_ID_Processing/serializers.py
    */National_ID_Processing/urls.py
    */National_ID_Processing/__init__.py
    */National_ID_Processing/apps.py


# Enable branch coverage
branch = True

[report]
# Show missing lines in the coverage report
show_missing = True
# Sort the report by the file name
sort = Name
[html]
# Directory to save HTML coverage reports
directory = coverage_html_report
